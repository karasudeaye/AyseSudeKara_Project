<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyseSudeKara_Project.AddProductPage"
             Title="Ürün Ekle">

    <StackLayout Padding="10" Spacing="10">


        <SearchBar x:Name="SearchBar" Placeholder="Ürün Ara..." TextChanged="OnSearchTextChanged" />


        <ScrollView>
            <StackLayout x:Name="ProductList" Spacing="10" />
        </ScrollView>


        <Button x:Name="SaveButton"
                Text="Kaydet"
                BackgroundColor="Blue"
                TextColor="White"
                FontSize="18"
                IsEnabled="False"
                Clicked="OnSaveClicked" />

    </StackLayout>
</ContentPage>
