<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyseSudeKara_Project.AddProductPage"
             BackgroundColor="White">

    <StackLayout>


        <StackLayout Orientation="Horizontal" Padding="10">
            <Button Text="←" Clicked="OnBackButtonClicked" />
            <Label Text="Ürünler" FontSize="24" HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="SearchEntry" Placeholder="Arama..." TextChanged="OnSearchTextChanged" HorizontalOptions="EndAndExpand" />
        </StackLayout>


        <ScrollView>
            <StackLayout x:Name="ProductListLayout" Padding="10">

            </StackLayout>
        </ScrollView>

    </StackLayout>

</ContentPage>
