<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyseSudeKara_Project.ProductDetailsPage"
             Title="Ürün Detayları">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">


            <Label x:Name="ProductNameLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />


            <Image x:Name="ProductImage"
                   HeightRequest="200"
                   Aspect="AspectFill"
                   HorizontalOptions="Center" />


            <Label Text="Ürün Bilgileri"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,20,0,5" />


            <Label x:Name="ProductTypeLabel"
                   FontSize="18" />


            <Label x:Name="ProductUsageLabel"
                   FontSize="18" />


            <Label x:Name="ProductAdditionalInfoLabel"
                   FontSize="18" />

        </StackLayout>
    </ScrollView>
</ContentPage>
