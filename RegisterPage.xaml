<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyseSudeKara_Project.RegisterPage"
             BackgroundColor="White">

    <StackLayout Padding="30" VerticalOptions="Center" Spacing="20">

        <Label Text="Kayıt Ol"
               FontSize="32"
               HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Adınız" />

        <Entry x:Name="EmailEntry" Placeholder="E-posta" Keyboard="Email" />

        <DatePicker x:Name="BirthDatePicker" />

        <Entry x:Name="PasswordEntry" Placeholder="Şifre" IsPassword="True" />

        <Button Text="Kayıt Ol" Clicked="OnRegisterButtonClicked" />

        <Label Text="Zaten bir hesabınız var mı?"
               HorizontalOptions="Center" FontSize="14" />
        <Button Text="Giriş Yap" Clicked="OnLoginButtonClicked" HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
