<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyseSudeKara_Project.HomePage">

    <StackLayout Padding="20" Spacing="20">

        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="&lt;&lt;" Clicked="OnPreviousDayClicked" />
            <Label x:Name="DateLabel" FontSize="18" VerticalOptions="Center" />
            <Button Text="&gt;&gt;" Clicked="OnNextDayClicked" />
            <Button Text="+" Clicked="OnAddProductClicked" HorizontalOptions="End" />
        </StackLayout>

        <ScrollView>
            <StackLayout x:Name="ToDoList" Padding="10">
                <Label x:Name="EmptyListLabel" Text="Henüz bir ürün eklenmedi. Ürün eklemek için '+' butonunu kullanın." 
                       FontSize="14" HorizontalOptions="Center" IsVisible="True" />
            </StackLayout>
        </ScrollView>

    </StackLayout>

</ContentPage>
