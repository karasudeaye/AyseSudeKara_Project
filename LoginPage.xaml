<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyseSudeKara_Project.LoginPage"
             BackgroundColor="White">

    <StackLayout Padding="30" VerticalOptions="Center" Spacing="20">

        <Label Text="Hoşgeldiniz"
               FontSize="32"
               HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="E-posta" Keyboard="Email" />

        <Entry x:Name="PasswordEntry" Placeholder="Şifre" IsPassword="True" />

        <Button Text="Giriş Yap" Clicked="OnLoginButtonClicked" />

        <Label Text="Henüz bir hesabınız yok mu?"
               HorizontalOptions="Center" FontSize="14" />
        <Button Text="Kayıt Ol" Clicked="OnRegisterButtonClicked" HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
